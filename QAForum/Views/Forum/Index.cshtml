@model IEnumerable<DAL.Models.Forum>

@{
    ViewBag.Title = ViewBag.Message;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ForumTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ForumTitle, "Index", "Thread", new { id = item.ForumID }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ForumID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ForumID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ForumID })
        </td>
    </tr>
}

</table>
