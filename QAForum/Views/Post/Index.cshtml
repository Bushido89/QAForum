@model IEnumerable<DAL.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>@Model.First().Thread.ThreadTitle</h2>
@Html.Partial("ModelBind")
@Scripts.Render("~/bundles/qa")
@Styles.Render("~/Content/qa")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostBody)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostBody)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PostID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PostID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PostID })
            </td>
        </tr>
    }

    @Html.Partial("CommentBox")
</table>
<a id="addComment" onclick="window.controlHelpers.commentBox.Get(this);">
    Add a comment...
</a>